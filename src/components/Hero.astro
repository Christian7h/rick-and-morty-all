---
const { title, subtitle } = Astro.props;
---

<section class="relative bg-black py-16">
  <div class="absolute inset-0 bg-cover bg-center opacity-5"></div>
  <div class="relative container mx-auto px-6">
    <div class="flex justify-between items-center">
      <div></div>
      <div class="flex space-x-1">
        <h1 class="text-4xl font-bold text-center text-white ">{title}</h1>
      </div>
      <nav class="gap-2 flex">
      </nav>
    </div>
    <div class="justify-start flex">
      <nav>
        <a href="/">
          hola
        </a>
      </nav>
    </div>
    <div class="mt-12 text-center">
      <h2 class="text-5xl font-bold text-gray-800">{subtitle}</h2>
    </div>
  </div>
</section>
